{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "$components": ["src/lib/components"],
      "$components/*": ["src/lib/components/*"],
      "$utils": ["src/lib/utils"],
      "$utils/*": ["src/lib/utils/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$stores": ["src/lib/stores"],
      "$stores/*": ["src/lib/stores/*"]
    }
  },
  "include": ["./src/**/*.d.ts", "./src/**/*.js", "./src/**/*.svelte"]
}
